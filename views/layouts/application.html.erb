<!DOCTYPE html>
<html>
  <head>
    <title>Theatre</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application.css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application.js', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if user_signed_in? %>
    <div class="container container-my1">
      <nav class="navbar navbar-inlog ">
        <div>
          <div class="left">
            <a class="nav-link" href="<%= theates_path %>">  Театры  </a>
            <a class="nav-link" href="<%= play_grounds_path %>"> Площадки</a>
          </div>
          <div class="right">
            <a class="nav-link-log"> <%= current_user.email %></a>
            <%= link_to 'Выход', destroy_user_session_path, method: :delete, class: "nav-link" %>
          </div>
        </div>
      </nav>
  <% else %>
      <div class="container container-my1">
        <nav class="navbar navbar-log ">
          <%= link_to 'Вход ', new_user_session_path, class: "nav-link" %>
          <%= link_to 'Регистрация', new_user_registration_path, class: "nav-link" %>
        </nav>
      </div>
  <% end %>
    </div>

    <div class="container container-my ">
      <div class="row">
        <div class="col-md-12">
          <% flash.each do |name,message| %>
            <div class="alert <%= bootstrap_class_for(name)%>">
              <%= message %>
            </div>
          <% end %>
        </div>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
